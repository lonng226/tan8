<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_czx_headicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_czx_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa" />

        <TextView
            android:id="@+id/item_czx_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111111111111111111111111111111111111111111111111111" />

        <ImageView
            android:id="@+id/item_czx_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/item_dzpersons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345666666666666666666666666666666666666666666666666666666666666"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bankï¼š" />

                <TextView
                    android:id="@+id/item_czx_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abcdef" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/item_czx_dz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/item_czx_pl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abcdef" />
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/item_czx_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:scrollbars="none" />
    </LinearLayout>


</LinearLayout>
