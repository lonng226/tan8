<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_info_listview_headicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/item_info_listview_plusernikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/highlighted_text_material_light"/>

        <TextView
            android:id="@+id/item_info_listview_replaystring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_info_listview_replayedusernikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/highlighted_text_material_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_info_listview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_info_listview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
